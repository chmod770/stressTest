{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="page-header">Strony</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa strony</th>
                <th>Adres URL</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <th scope="row">{{ page.id }}</th>
                <td>{{ page.name }}</td>
                <td>{{ page.adress }}</td>
                <td>
                    <a href="details/{{ page.adress }}" class="btn btn-success">View</a>
                    <a href="edit" class="btn btn-default">Edit</a>
                    <a href="delete/{{ page.id }}" class="btn btn-danger">Delete</a>
                    <a href="test/{{ page.adress }}" class="btn btn-success">Test</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}